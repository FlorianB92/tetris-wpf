<Window x:Class="Tetris_WPF.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris_WPF"
        mc:Ignorable="d"
        Title="Start" MinHeight="600" MinWidth="500" MaxHeight="600" MaxWidth="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Tetris.png"/>
        </Grid.Background>
        <Label Content="Tetris" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" FontSize="72" FontFamily="Microsoft Sans Serif" Height="97" Width="300" FontStyle="Italic" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <Button Content="Start" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top" Height="66" Width="170" FontSize="22" Click="StartIsClick"/>
        <Button Content="Option" HorizontalAlignment="Center" Margin="0,279,0,0" VerticalAlignment="Top" Height="68" Width="170" FontSize="22" Click="OptionIsClick"/>
        <Button Content="Exit" HorizontalAlignment="Center" Margin="0,403,0,0" VerticalAlignment="Top" Height="81" Width="170" FontSize="22" Click="ExitIsClick"/>

    </Grid>
</Window>
